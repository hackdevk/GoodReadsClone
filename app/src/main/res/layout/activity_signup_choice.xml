<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupChoiceActivity"
    android:layout_margin="23dp">

    <TextView
        android:id="@+id/activity_signup_choice_tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name_style"
        android:textColor="@color/brown_color"
        android:textSize="44sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activity_signup_choice_tv_description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find more books you'll love."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/activity_signup_choice_tv_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use the scan feature to easily keep track of books."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_description1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/activity_signup_choice_tv_description3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get recommendations from readers like you"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_description2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_btn_fb"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:background="@color/fb_btn_color"
        android:textColor="@color/white_color"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_description3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_btn_amazon"
        android:text="Continue with Amazon"
        android:textAllCaps="false"
        android:background="@color/amazon_btn_color"
        android:textColor="@color/black_color"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_btn_fb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_btn_signup_email"
        android:text="@string/email_signup"
        android:textAllCaps="false"
        android:background="@color/white_color"
        android:textColor="@color/black_color"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_btn_amazon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/activity_signup_choice_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_btn_signup_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>