<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SignupActivity"
    tools:showIn="@layout/activity_signup"
    android:layout_margin="13dp">

    <TextView
        android:id="@+id/content_signup_tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name_style"
        android:textColor="@color/brown_color"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_et_name"
        android:hint="Name"
        android:layout_marginTop="33dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/content_signup_tv_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_et_email"
        android:hint="Email"
        android:layout_marginTop="7dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_et_password"
        android:hint="Password"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_et_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_btn_signup"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:background="@color/colorPrimaryLight"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_et_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_tv_policy1"
        android:layout_marginTop="22dp"
        android:textSize="16sp"
        android:text="By creating an account, you agree to the Goodreads "
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_btn_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_tv_policy2"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_policy1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_choice_tv_signin"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_choice_tv_policy2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>