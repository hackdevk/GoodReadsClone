            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/content_terms_of_use_tv_content10"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_terms_of_use_tv_content12"
            android:textSize="19sp"
            android:text="@string/use_of_our_service_9"
