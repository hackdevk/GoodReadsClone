            app:layout_constraintTop_toBottomOf="@id/content_terms_of_use_tv_content7"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_terms_of_use_tv_content9"
            android:textSize="19sp"
            android:text="@string/use_of_our_service_6"
